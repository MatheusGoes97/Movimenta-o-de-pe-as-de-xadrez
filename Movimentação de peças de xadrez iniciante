#include <stdio.h>

int main() {
    printf("=== SIMULACAO DE MOVIMENTOS NO XADREZ ===\n\n");

    // Movimento da Torre (5 casas para a direita) - usando FOR
    printf("Movimento da Torre (5 casas para a direita):\n");
    for (int i = 1; i <= 5; i++) {
        printf("Direita\n");  // Torre se move em linha reta
    }
    printf("\n");

    // Movimento do Bispo (5 casas na diagonal superior direita) - usando WHILE
    printf("Movimento do Bispo (5 casas na diagonal superior direita):\n");
    int casas_bispo = 1;
    while (casas_bispo <= 5) {
        printf("Cima, Direita\n");  // Bispo se move na diagonal
        casas_bispo++;
    }
    printf("\n");

    // Movimento da Rainha (8 casas para a esquerda) - usando DO-WHILE
    printf("Movimento da Rainha (8 casas para a esquerda):\n");
    int casas_rainha = 1;
    do {
        printf("Esquerda\n");  // Rainha se move em linha reta (como a torre)
        casas_rainha++;
    } while (casas_rainha <= 8);

    return 0;
}
